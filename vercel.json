{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/**/*.ts",
            "use": "@vercel/node"
        },
        {
            "src": "flextrack/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "flextrack/build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/src/combinedRoutes.ts"
        },
        {
            "src": "/(.*)",
            "dest": "flextrack/build/$1"
        }
    ]
}