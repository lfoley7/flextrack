{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/server.ts",
            "use": "@vercel/node"
        },
        {
            "src": "flextrack/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "flextrack/build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/src/server.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/flextrack/build/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}